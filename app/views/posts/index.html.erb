<div class="page-header">
  <div class="pull-right">
    <%= link_to 'Yeni Yazı', new_post_path, :class => "btn btn-lg btn-success" %>
  </div>
  <h1>Yazılar Ana Sayfa</h1>
</div>

<table class="table table-condensed">
  <thead>
  <tr>
    <th>Kategorisi</th>
    <th>Başlık</th>
    <th>Yazar</th>
    <th>İçerik</th>
    <th>Aksiyonlar</th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
      <tr>
        <td><%= post.category.try(:name) %></td>
        <td><%= post.title %></td>
        <td><%= post.author%></td>
        <td><%= post.body%></td>

        <td>
          <div class="btn-group">
            <%= link_to 'Show', post, :class => 'btn btn-info' %>
            <%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-warning' %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>