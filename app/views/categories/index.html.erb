<div class="page-header">
  <div class="pull-right">
    <%= link_to 'Yeni Categori', new_category_path, :class => "btn btn-lg btn-success" %>
  </div>
  <h1>Categoriler Ana Sayfa</h1>
</div>


<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Order</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.order %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', category, :class => 'btn btn-info' %>
            <%= link_to 'Edit', edit_category_path(category), :class => 'btn btn-warning' %>
            <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
